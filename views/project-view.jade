extends layout
block content
    // Page content
    main
        .page-title-gray
            .container
              .title
                h4 Project Info
        .page-top
            .container
              .inner
                .title
                  a.link-custom.collection-link(href='javascript:;')
                    em.fa.fa-th-large
                    |  COLLECTIONS 
                    em.fa.fa-caret-down
                .search-form
                  form(action='#')
                    .form-group
                      .input-group-btn
                        input.form-control(placeholder='Search', type='text')
                        button.btn.btn-default(type='button')
                          i.fa.fa-search
            .mega-menu
              .container
                .inner-menu
                  .inner-title
                    h1 Browse by Categories
                  .row
                    .col-md-3.col-sm-3
                      ul
                        li
                          a(href='#') New & Fresh
                        li
