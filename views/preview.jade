              form(action='#')
                .form-group
                  .input-group-btn
                    input.form-control(placeholder='Search', type='text')
                    button.btn.btn-default(type='button')
                      i.fa.fa-search
        .mega-menu
          .container
            .inner-menu
              .inner-title
                h1 Browse by Categories
              // .row
                .col-md-3.col-sm-3
                  ul
                    li
