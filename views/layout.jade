// Begin Create Project
#createNewProject.modal.fade.modal-scroll(tabindex='-1', data-replace='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true')
          em.fa.fa-times
        h4.modal-title Create a NEW Project
      .modal-body
        form(action='', method='post', enctype='multipart/form-data')
            .row
              // Start Address
              .col-sm-6.address
                .form-group
                  label Project Name
                  input.form-control(type='text', name='project_name', placeholder='', value='')
                .form-group
                  label Client Name
                  input.form-control(type='text', name='client_name', placeholder='', value='')
                .form-group
                  label Street Address
                  input.form-control(type='text', name='street_address', placeholder='', value='')
                .form-group
                  label City
                  input.form-control(type='text', name='city', placeholder='', value='')
                .form-group
                  label State
                  input.form-control(type='text', name='state', placeholder='', value='')
              // End Address
              // Start Social
              .col-sm-6.social
                .form-group
                  label Website URL
                  input.form-control(type='url', name='website_url', placeholder='e.g www.example.com', value='')
                .form-group
                  label Facebook URL
                  input.form-control(type='url', name='facebook_url', placeholder='e.g www.facebook.com/page/page{id}', value='')
                .form-group
                  label Youtube Channel
                  input.form-control(type='url', name='youtube_channel', placeholder='e.g www.youtube.com/channel/xyz', value='')
                .form-group
                  label Twitter URL
                  input.form-control(type='url', name='twitter_url', placeholder='e.g www.twitter.com/xyz', value='')
                .form-group
                  label Linkedin URL
                  input.form-control(type='url', name='linkedin_url', placeholder='e.g www.linkedin.com/xyz', value='')
              // End Social
            hr
            h5.text-info Youtube/Vimeo Settings
            .row
              .col-sm-6
                .form-group
                  label Client Youtube Credentials
                  input.form-control(type='text', name='client_youtube_credentials', placeholder='xxx-xxxx-xx-xxxxx', value='')
              .col-sm-6
                .form-group
                  label Client Vimeo Credentials
                  input.form-control(type='text', name='client_vimeo_credentials', placeholder='xxx-xxxx-xx-xxxxx', value='')
            .form-group
              label Upload a file
              input.form-control.filestyle(type='file', name='logo', data-classbutton='btn btn-default', data-classinput='form-control inline', placeholder='Upload Logo(s)', multiple='true', accept='.jpg,.png,.jpeg,.psd,.ai')
            .modal-footer
              .row
                .fl-right.form-group
                  button.btn.btn-danger(type='submit') Create Project
                  button.btn.grey(type='button', data-dismiss='modal', aria-hidden='true') Cancel


// End Create Project

